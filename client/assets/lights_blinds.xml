<Extensions>
  <Version>1.9</Version>
  <Panel>
    <Order>1</Order>
    <PanelId>uisim_lights</PanelId>
    <Location>HomeScreen</Location>
    <Icon>Lightbulb</Icon>
    <Color>#CF7900</Color>
    <Name>Lights &amp; Blinds</Name>
    <ActivityType>Custom</ActivityType>
    <Page>
      <Name>Lights &amp; Blinds</Name>
      <Row>
        <Name>Lights</Name>
        <Widget>
          <WidgetId>lights_slider</WidgetId>
          <Type>Slider</Type>
          <Options>size=3</Options>
        </Widget>
        <Widget>
          <WidgetId>lights_toggle</WidgetId>
          <Type>ToggleButton</Type>
          <Options>size=1</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Blinds Presets</Name>
        <Widget>
          <WidgetId>blinds_preset</WidgetId>
          <Type>GroupButton</Type>
          <Options>size=4</Options>
          <ValueSpace>
            <Value>
              <Key>0</Key>
              <Name>Open</Name>
            </Value>
            <Value>
              <Key>50</Key>
              <Name>50/50</Name>
            </Value>
            <Value>
              <Key>100</Key>
              <Name>Closed</Name>
            </Value>
          </ValueSpace>
        </Widget>
      </Row>
      <Row>
        <Name>Blinds Manual</Name>
        <Widget>
          <WidgetId>blinds</WidgetId>
          <Type>Spinner</Type>
          <Options>size=2</Options>
        </Widget>
      </Row>
      <Options/>
    </Page>
    <Page>
      <Name>Projector</Name>
      <Row>
        <Name>Power</Name>
        <Widget>
          <WidgetId>projector_power</WidgetId>
          <Type>ToggleButton</Type>
          <Options>size=1</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Canvas up/down</Name>
        <Widget>
          <WidgetId>projector_canvas</WidgetId>
          <Type>Spinner</Type>
          <Options>size=2</Options>
        </Widget>
      </Row>
      <Options/>
    </Page>
  </Panel>
</Extensions>
